<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC" >

    <RelativeLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_button_header"
            android:scaleType="centerInside"
            android:src="@drawable/ic_button_menu" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/bg_button_header" >

            <ImageButton
                android:id="@+id/button_refresh"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/ic_button_refresh" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/button_menu"
            android:text="News Feed"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/container_header"
        android:background="#AAAAAA" />

    <fi.harism.fplus.view.FeedList
        android:id="@+id/feedlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_separator"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/textview_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#444444"
        android:gravity="center"
        android:paddingTop="2dp"
        android:text="Footer"
        android:textColor="#FF0000"
        android:textSize="30sp" />

</RelativeLayout>